<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/chat_ll"
    tools:context=".activity.ChatActivity">

    <com.example.hc.chat.view.MainTitle
        android:id="@+id/chat_title"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"></com.example.hc.chat.view.MainTitle>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/chatList"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/hui"
        />

    <com.example.hc.chat.view.ChatBottom
        android:id="@+id/chat_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
    />

    <LinearLayout
        android:id="@+id/chat_emotion_ll"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="180dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp" />


        <android.support.v4.view.ViewPager
            android:id="@+id/chat_emotion_vp"
            android:layout_width="match_parent"
            android:layout_height="150dp"></android.support.v4.view.ViewPager>


        <TextView
            android:text="tmp"
            android:textSize="40dp"
            android:gravity="center"
            android:background="@color/hui3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>




</LinearLayout>

